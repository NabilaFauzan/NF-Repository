    private void btntambahActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btntambahActionPerformed
        try {
            // TODO add your handling code here:
            Connection cn = DriverManager.getConnection("jdbc:mysql://localhost/apotek2","root","");
            cn.createStatement().executeUpdate("insert into dataklien values"+"('"+id.getText()+"','"+nama_lengkap.getText()+"','"+no_telepon.getText()+"','"+email.getText()+"')");
            tampilkan();
            reset();
        } catch (SQLException ex) {
            JOptionPane.showMessageDialog(null, "Data belum diisi.");
        }
    }//GEN-LAST:event_btntambahActionPerformed

