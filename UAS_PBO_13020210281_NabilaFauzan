    private void tampilkan() {
        int row = tabel.getRowCount();
        for(int a= 0; a<row; a++){
            model.removeRow(0);
        }
        try{
            Connection cn = DriverManager.getConnection("jdbc:mysql://localhost/daftarklienkonsultasi","root","");
            ResultSet rs = cn.createStatement().executeQuery("SELECT * FROM dataklien");
            while(rs.next()){
                String data []= {rs.getString(1),rs.getString(2),rs.getString(3),rs.getString(4)};
                model.addRow(data);
            }
        }catch (SQLException ex){
            Logger.getLogger(dataklien.class.getName()).log(Level.SEVERE, null, ex);
        }
    }
        
